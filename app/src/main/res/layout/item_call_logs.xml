<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="4dp">

    <!--on below line we are creating
        a linear layout for grid view item-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!--on below line we are creating
            a simple image view-->
        <ImageView
            android:id="@+id/image1"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:padding="@dimen/_18sdp"
            android:layout_margin="8dp"
            android:src="@drawable/ic_settings_foreground" />

        <!--on below line we are creating
            a simple text view-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_8sdp"
            android:weightSum="2"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="6"
                android:layout_weight="1"
                android:layout_height="0dp">
                <TextView
                    android:id="@+id/number1"
                    android:layout_weight="4.6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:padding="4dp"
                    android:text="+918287258430"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/imagesim"
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_height="@dimen/_30sdp"

                    android:layout_gravity="end"

                    android:padding="@dimen/_8sdp"
                    app:riv_oval="true"
                    android:visibility="invisible"
                    app:riv_border_color="@color/orange"
                    android:src="@drawable/baseline_check_circle_24"

                    android:textColor="@color/black"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/imagemic"
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_height="@dimen/_30sdp"


                    android:padding="@dimen/_8sdp"
                    app:riv_oval="true"
                    android:visibility="invisible"
                    android:src="@drawable/podcast"

                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_height="0dp">
                <TextView
                    android:id="@+id/timecame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:text="3.02 AM"
                    android:paddingStart="4dp"

                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />
                <TextView
                    android:id="@+id/durationofcall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"

                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:padding="4dp"
                    android:text="3 min 10 sec"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />

            </LinearLayout>



        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>